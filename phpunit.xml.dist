<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="./tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite>
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
    <php>
        <const name="LANGUAGETOOL_DIR"  />
        <const name="LANGUAGETOOL_IP"   value="localhost"/>
        <const name="LANGUAGETOOL_PORT" value="8010"/>
    </php>
</phpunit>
